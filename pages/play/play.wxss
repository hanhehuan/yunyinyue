/* pages/play/play.wxss */
.content{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  background-color: #222;
}
.bac_img{
  width: 100%;
  height: 100%;
  /*透明度0完全透明1完全不透明*/
  opacity: 0.5;
}
.title{
  width: 100%;
  font-size: 40rpx;
  position: absolute;
  left: 0rpx;
  top: 80rpx;
  color: white;
  text-align: center;
}
.middle{
  width: 100%;
  height: 700rpx;
  position: absolute;
  top: 170rpx;
  left: 0rpx;
  /* background: brown; */
}
.middle_swip{
  width: 100%;
  height: 100%;
}
/*设置封面*/
.cd_wrapper{
  width: 100%;
}
.cd_image{
  width: 600rpx;
  height: 600rpx;
  margin: 50rpx auto;
  /* background: blue; */
}
.cd_image image{
  width: 440rpx;
  height: 440rpx;
  border-radius: 50%;
  border: #222 solid 80rpx;
  animation: zhuan 6s linear infinite;
}
@keyframes zhuan{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}
/*歌词滚动样式*/
.yric_wrapper{
  width: 80%;
  height: 100%;
  margin: 0 auto;
  background: chartreuse;
}
.yric_wrapper text{
  display: block;
}
::-webkit-scrollbar{
  width: 0rpx;
  height: 0rpx;
}

.controller{
  width: 100%;
  height: 150rpx;
  background: #c20c0c;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}
.controller image{
  width: 130rpx;
  height: 130rpx;
  margin-top: 14rpx;
  margin-left: 96rpx;
}